{
  "devDependencies": {
    "@types/jasmine": "3.3.9",
    "@types/karma": "3.0.2",
    "@types/node": "11.10.4",
    "husky": "1.3.1",
    "jasmine": "3.3.1",
    "karma": "4.0.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "2.0.1",
    "karma-typescript": "4.0.0",
    "nyc": "13.3.0",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "rimraf": "2.6.3",
    "ts-node": "8.0.2",
    "typescript": "3.3.3333"
  },
  "name": "karma-test",
  "scripts": {
    "clean": "rimraf .nyc_output coverage",
    "lint": "prettier --ignore-path .gitignore --write \"**/*.{js,json,md,ts,yml}\"",
    "test": "yarn test:browser && yarn test:node",
    "test:browser": "karma start",
    "test:node": "nyc --temp-dir=.nyc_output/node --report-dir=coverage/node jasmine --config=jasmine.json"
  }
}
